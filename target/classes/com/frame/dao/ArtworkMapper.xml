<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.frame.dao.ArtworkMapper">
    <insert id="creatArtwork" parameterType="com.frame.po.Artwork" useGeneratedKeys="true" keyProperty="artwork_id">
        INSERT INTO artwork(artwork_comment,artwork_artistId,artwork_name,artwork_location,artwork_height,artwork_width) VALUES
            (#{artwork_comment},#{artwork_artistId},#{artwork_name},#{artwork_location},#{artwork_height},#{artwork_width})
    </insert>
    <update id="updateArtworkLocationById">
        UPDATE artwork SET artwork_location=#{0} where artwork_id=#{1}
    </update>
    <select id="getDefaultArtwork" resultType="com.frame.po.ArtworkForUser">
        SELECT * FROM artwork order by artwork_id limit #{0},15;
    </select>
    <select id="getArtworkById" resultType="com.frame.po.ArtworkForUser">
        SELECT * FROM artwork where artwork_id=#{artworkId}
    </select>
    <delete id="deleteArtwork">
        DELETE from artwork where artwork_artistId=#{1} and artwork_id=#{0}
    </delete>
    <select id="getUserArtwork" resultType="com.frame.po.Artwork">
        SELECT * from artwork where artwork_artistId=#{0} order by artwork_id limit #{1},24
    </select>
</mapper>
